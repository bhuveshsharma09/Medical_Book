<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".yogainstructorfeature.FragmentTimer">

<TextView
android:id="@+id/time_display"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/margin_top"
android:textAppearance="@android:style/TextAppearance.Large"

android:textSize="80sp"
    />



    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
<Button
android:id="@+id/start_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
    android:background="@drawable/timer_start"
android:layout_gravity="center_horizontal"

    android:layout_marginRight="@dimen/margin_left"
android:layout_marginTop="20dp"
android:text="@string/button_timer_start"
    />
<Button
android:id="@+id/stop_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
    android:background="@drawable/timer_start"
android:layout_marginTop="8dp"
    android:layout_marginRight="@dimen/margin_left"
android:text="@string/button_timer_stop"
    />
<Button
android:id="@+id/reset_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
    android:background="@drawable/timer_start"
android:layout_marginTop="8dp"
android:text="@string/button_timer_reset"
    />


</LinearLayout>
    </LinearLayout>





