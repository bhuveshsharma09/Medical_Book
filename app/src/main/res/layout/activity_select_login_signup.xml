<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_purple_light"

    android:orientation="vertical"
    tools:context=".SelectLoginSignUpActivity">


    <View
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/theme_blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/lower_bar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="74dp"
        android:elevation="5dp"
        android:foregroundGravity="center"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lower_bar" />

    <Button
        android:id="@+id/signup"

        android:layout_width="0dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="16dp"

        android:background="@drawable/login_button_background"
        android:text="Sign Up"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/login"


        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_toRightOf="@id/signup"
        android:background="@drawable/login_button_background"
        android:text="Login"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/top_bar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.598" />

    <View
        android:id="@+id/top_bar2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_bottom_new"
        app:layout_constraintBottom_toTopOf="@+id/top_bar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/top_bar3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/theme_green_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>